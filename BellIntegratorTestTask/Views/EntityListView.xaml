<UserControl x:Class="BellIntegratorTestTask.Views.EntityListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BellIntegratorTestTask.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!--ItemTemplateSelector="{StaticResource myDataTemplateSelector}"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <DataGrid x:Name="MyDataGrid" AutoGeneratedColumns="DataGrid_AutoGeneratedColumns" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" CanUserAddRows="false" DataContext="{Binding}">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="Action">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="Действие" />
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    
                                    <Button x:Name="updateBtn" Content="Обновить" 
                                        Command="{Binding DataContext.UpdateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                    <Button x:Name="deleteBtn" Content="Удалить" 
                                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="insertBtn" Content="Добавить" Width="100" 
                                        Command="{Binding DataContext.InsertCommand, RelativeSource={RelativeSource AncestorType=Grid}}" />
            <Button x:Name="toMenuButton" Content="В меню" Width="100" 
                                        Command="{Binding DataContext.GoToMenu, RelativeSource={RelativeSource AncestorType=Grid}}" />
            </StackPanel>
        </StackPanel>
    </Grid>
    
    
</UserControl>
