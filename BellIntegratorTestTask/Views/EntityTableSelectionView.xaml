            Command="{Binding GoToTablePage}"
            CommandParameter="Products"
            Width="90" Height="30" />
        <!--<Button Grid.Column="1"
            Content="Заказчики"
            Command="{Binding GoToTablePage}"
            CommandParameter="Customers"
            Width="90" Height="30" />-->
        <Button Grid.Column="1"
            Content="Сотрудники"
